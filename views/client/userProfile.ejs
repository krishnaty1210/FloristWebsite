    border-bottom: 1px solid #e0e0e0
}

.f-w-600 {
    font-weight: 600
}

.m-b-20 {
    margin-bottom: 20px
}

.m-t-40 {
    margin-top: 20px
}

.p-b-5 {
    padding-bottom: 5px !important
}

.m-b-10 {
    margin-bottom: 10px
}

.m-t-40 {
    margin-top: 20px
}

.user-card-full .social-link li {
    display: inline-block
}

.user-card-full .social-link li a {
    font-size: 20px;
    margin: 0 10px 0 0;
    -webkit-transition: all 0.3s ease-in-out;
    transition: all 0.3s ease-in-out
}

                header{ 
                   background-image: url('../images/background.jpeg') ;
                   opacity: 0.75;
                }
                 #DIV {
                   margin-top: 55px;
                   font-size: xx-large;
                }
              </style>
    </head>
    <body>
      <header>
        <% include header %>
        <div id="DIV" style="background-color: rgb(235, 235, 228); font-weight: bolder;color: rgb(46, 88, 45);font-size: xx-large; width: fit-content; margin-left: 200px; " >
          <p>THE INFINITY PETALS</p>
        </div>
      </header>
        <div class="container">



        
        <% if(userRecord.length > 0){ %> 


          <div class="page-content page-container" id="page-content">
            <% userRecord.forEach(function(data) { %>
            <div class="padding">
                <div class="row container d-flex justify-content-center">
                    <div class="col-xl-6 col-md-12">
                        <div class="card user-card-full">
                            <div class="row m-l-0 m-r-0">
                                <div class="col-sm-4 bg-c-lite-green user-profile">
                                    <div class="card-block text-center text-white">
                                        <div class="m-b-25"> <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image"> </div>
                                        <h6 class="f-w-600"><%= data.fName %></h6>
                                        <p><%= data.username %></p> <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                                        <a data-toggle="modal" class="btn btn-primary" data-target="#myModal<%=data._id %>">
                                          Edit Profile
                                        </a>               
                                    </div>
                                </div>
                                <div class="col-sm-8">
                                    <div class="card-block">
                                        <h4 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h4>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600">Email</p>
                                                <h6 class="text-muted f-w-400"><%= data.email %></h6>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600">Phone</p>
                                                <h6 class="text-muted f-w-400"><%= data.phone %> </h6>
                                            </div>
                                        </div>
                                        <h4 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Address</h4>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600">City</p>
                                                <h6 class="text-muted f-w-400"><%= data.city %> </h6>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600">Address</p>
                                                <h6 class="text-muted f-w-400"><%= data.address %> </h6>
                                            </div>
                                        </div>
                                        <div class="row">
                                          <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Created Time</p>
                                            <h6 class="text-muted f-w-400"><%= new Date(data.time_of_creation).toLocaleString() %>  </h6>
                                        </div>
                                        <ul class="social-link list-unstyled m-t-40 m-b-10">
                                            <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook" data-abc="true"><i class="mdi mdi-facebook feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                                            <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter" data-abc="true"><i class="mdi mdi-twitter feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                                            <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

      <div class="modal fade" id="myModal<%=data._id %>" role="dialog">
        <div class="modal-dialog">

          <div class="modal-content">
            <div class="modal-header">

              <h4 class="modal-title" style="text-align: center;"><b><%= data.fName %> </b></h4>
            </div>
            <div>
              <div class="modal-body">
                <form action="/edit-profile/<%=data._id%>" method="POST">
                  <div class="form-group">
                    <b>Full Name: </b> <br>
                    <input name="fname" type="text" value="<%= data.fName %> "> <br>
                    <b>Phone Number: </b> <br>
                    <input name="phone" type="text" value="<%= data.phone %> "> <br>
                    <b>City: </b> <br>
                    <input name="city" type="text" value="<%= data.city %> "> <br>
                    <b>Address: </b> <br>
                    <input name="address" type="text" value="<%= data.address %> ">
                  </div>
                  <button type="submit" class="btn btn-primary">Update</button>

                </form>
              </div>
            </div>
            <div class="modal-footer">

              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>

          </div>
        </div>
      </div>
            <% }) %> 
        </div>
        <% } else{%>
            <h4>Account not created</h4>
        <% } %>  
    </div>
    <% include footer %> 
    </body>
</html>